/* pages/actAdd/actAdd.wxss */
.my-list {
  margin-top: 20rpx;
  background: #fff;
}

.my-bar {
  display: flex;
  border-top: 1px solid #e7e7e7;
  justify-content: space-between;
  line-height: 60rpx;
  font-size: 32rpx;
  padding: 20rpx 70rpx 20rpx 20rpx;
  background: #fff;
  position: relative;
}

.my-bar-img {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  top: 20rpx;
  left: 20rpx;
}

.my-bar-next {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  right: 20rpx;
  top: 35rpx;
}

.my-bar-input {
  width: calc(100% - 160rpx);
  text-align: right;
}

.my-bar-input input {
  height: 60rpx;
}

.my-bar-input {
  text-align: left;
}

.my-bar textarea {
  width: calc(100% - 160rpx);
  line-height: 40rpx;
  height: 160rpx;
  padding: 10rpx 0
}
