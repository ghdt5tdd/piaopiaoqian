/* pages/formSheetdaily/formSheetdaily.wxss */

.daily {
  background: #fff;
  min-height: 100vh;
}

.daily-item {
  border-top: 2rpx solid #e7e7e7;
  padding: 10rpx 20rpx;
  position: relative;
  font-size: 30rpx;
  line-height: 60rpx;
}

.daily-name{
  position: absolute;
  top:10rpx;
  right: 20rpx;
  width: calc(100% - 420rpx);
  text-align: right
}

.daily-date{
  width: 420rpx
}
