/* pages/account/account.wxss */

.account {
  margin-top: 10rpx;
  height: calc(100vh - 206rpx);
}

.account-item {
  display: flex;
  justify-content: space-between;
  border-top: 1rpx solid #ccc;
  width: 100%;
  overflow: hidden;
}

.account-item:first-child {
  border: none;
}

.account-info {
  background: #fff;
  width: 100%;
  font-size: 36rpx;
  line-height: 60rpx;
  padding: 20rpx 180rpx 20rpx 130rpx;
  position: relative;
}

.account-avatar {
  position: absolute;
  top: 25rpx;
  left: 20rpx;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.account-spec {
  font-size: 28rpx;
  color: #999;
  line-height: 40rpx;
  display: flex;
}

.account-permit {
  margin-left: 20rpx;
}

.account-set {
  position: absolute;
  right: 20rpx;
  top: 40rpx;
  width: 150rpx;
  height: 60rpx;
}

.account-set image {
  width: 150rpx;
  height: 60rpx;
}

.account-opt {
  background-color: #e52019;
  width: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(200rpx);
  transform: translateX(200rpx);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.edit, .del {
  width: 100rpx;
  line-height: 140rpx;
  text-align: center;
  font-size: 28rpx;
}

.edit {
  background: #b3b3b3;
}

.touch-move-active .account-info, .touch-move-active .account-opt {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

.popup-permit {
  position: fixed;
  z-index: 999;
  background: #fff;
  width: 90%;
  height: 600rpx;
  left: 5%;
  top: 50%;
  margin-top: -300rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.popup-permit-head {
  font-size: 36rpx;
  text-align: center;
  padding: 20rpx 0;
  line-height: 60rpx;
}

.popup-permit-opt {
  display: flex;
  line-height: 80rpx;
  align-items: center;
  margin-right: -1px;
  border-top: 1px solid #e7e7e7;
}

.popup-permit-opt view {
  font-size: 30rpx;
  text-align: center;
  width: calc(50% - 1px);
  border-right: 1px solid #e7e7e7;
}

.popup-permit-content {
  padding: 0 20rpx;
}

.popup-permit-role {
  border-bottom: 1px solid #e7e7e7;
  padding: 20rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.permit-role-icon {
  width: 40rpx;
  height: 40rpx;
}

.permit-role-icon image {
  width: 40rpx;
  height: 40rpx;
}

.popup-permit-role:last-child {
  border: none;
}

.popup-longTap {
  position: fixed;
  z-index: 999;
  background: #fff;
  width: 100%;
  bottom: 0;
  overflow: hidden;
}

.longTap-opt {
  font-size: 28rpx;
  line-height: 80rpx;
  text-align: center;
  border-bottom: 1px solid #e7e7e7;
}

.longTap-opt:last-child {
  background: #eee;
  border: none;
}

/*修改部分*/

.query-add {
  position: absolute;
  font-size: 0.8rem;
  line-height: 42rpx;
  z-index: 11;
  top: 30rpx;
  right: 20rpx;
}

.query-condition-items.active:nth-child(even) .search-clear {
  right: 60rpx;
}
