<!--index.wxml-->
<view class="my-head">
  <image class='my-head-bg' src='../../images/bg.jpg' mode="widthFix"></image>
  <view class="userinfo">
    <block>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{memberInfo.head_img}}" mode="cover"></image>
      <view class="userinfo-nickname">昵称:{{memberInfo.user_nickname}}</view>
      <view class="userinfo-nickid">账号:{{memberInfo.user_account}}</view>
    </block>
  </view>
</view>

<view class='my-tabs'>
  <view class='my-tabs-status {{ul}}'>
    <block wx:for="{{orderStatus}}">
      <view class="tabs-status-items  {{item.code === curCode?'on':''}}" bindtap='selectStatus' data-code="{{item.code}}">
        {{item.name}}
      </view>
    </block>
  </view>
  
  <block wx:for="{{orderStatus}}">
    <view class='my-tabs-content' hidden="{{item.code !== curCode}}">
      <view class='my-tabs-items' wx:for="{{item.tabs}}">
        <view class='my-tabs-num'>{{item.count}}</view>
        <view class='my-tabs-name'>{{item.name}}</view>
      </view>
    </view>
  </block>
</view>

<view class='my-list' wx:for="{{myList}}">
  <view class='my-bar' wx:for="{{item.bar}}" bindtap='{{item.to}}'>
     <image src='{{item.img}}' class='my-bar-img'></image>
     <view class='my-bar-label'>{{item.label}}</view>
     <image src='../../images/next.png' class='my-bar-next'></image>
  </view>
</view>