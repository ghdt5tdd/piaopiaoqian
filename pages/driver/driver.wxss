/* pages/driver/driver.wxss */

.driver-list {
  padding: 20rpx 20rpx 0;
}

.driver-item {
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  font-size: 30rpx;
  line-height: 48rpx;
}

.driver-item-info {
  border-bottom: 1px solid #e7e7e7;
  padding: 20rpx 30rpx;
  color: #666;
}

.driver-item-name {
  color: #000;
  font-weight: 600;
  margin-bottom: 10rpx;
  display: flex;
  justify-content: space-between;
}

.driver-item-block {
  overflow: hidden;
  padding: 10rpx 0;
}

.driver-item-bar {
  float: left;
  display: flex;
  align-items: center;
  line-height: 40rpx;
  margin-right: 20rpx;
}

.driver-item-opt {
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 40rpx;
}

.driver-item-opt image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.driver-item-button {
  display: flex;
  align-items: center;
}
