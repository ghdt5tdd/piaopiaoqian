<!--pages/personal/personal.wxml-->
<view class='my-list' >
  <view class='my-bar' bindtap=''>
     <image src='../../images/icon1.png' class='my-bar-img'></image>
     <view class='my-bar-label'>真实姓名</view>
     <view class='my-bar-input'>{{personalInfo.name || '空'}}</view>
     <image src='../../images/next.png' class='my-bar-next'></image>
  </view>
  <view class='my-bar' bindtap='showNickname'>
     <image src='../../images/icon2.png' class='my-bar-img'></image>
     <view class='my-bar-label'>昵称</view>
     <view class='my-bar-input'>{{personalInfo.nickname || '空'}}</view>
     <image src='../../images/next.png' class='my-bar-next'></image>
  </view>
  <view class='my-bar' bindtap=''>
     <image src='../../images/icon3.png' class='my-bar-img'></image>
     <view class='my-bar-label'>账号</view>
     <view class='my-bar-input'>{{personalInfo.user_account || '空'}}</view>
     <image src='../../images/next.png' class='my-bar-next'></image>
  </view>
    <view class='my-bar' bindtap=''>
     <image src='../../images/icon4.png' class='my-bar-img'></image>
     <view class='my-bar-label'>年龄</view>
     <view class='my-bar-input'>{{personalInfo.age || '空'}}</view>
     <image src='../../images/next.png' class='my-bar-next'></image>
  </view>
</view>

<view class='my-list'>
  <view class='my-bar'  bindtap=''>
     <image src='../../images/icon5.png' class='my-bar-img'></image>
     <view class='my-bar-label'>联系方式</view>
