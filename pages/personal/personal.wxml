     <image src='../../images/icon6.png' class='my-bar-img'></image>
     <view class='my-bar-label'>邮箱</view>
     <view class='my-bar-input'>{{personalInfo.email || '空'}}</view>
     <image src='../../images/next.png' class='my-bar-next'></image>
  </view>
  <view class='my-bar'  bindtap=''>
     <image src='../../images/icon7.png' class='my-bar-img'></image>
     <view class='my-bar-label'>单位名称</view>
     <view class='my-bar-input'>{{personalInfo.unit_name || '空'}}</view>
     <image src='../../images/next.png' class='my-bar-next'></image>
  </view>
  <view class='my-bar'  bindtap=''>
     <image src='../../images/icon8.png' class='my-bar-img'></image>
     <view class='my-bar-label'>单位地址</view>
     <view class='my-bar-input'>{{personalInfo.unit_address || '空'}}</view>
     <image src='../../images/next.png' class='my-bar-next'></image>
  </view>
</view>
