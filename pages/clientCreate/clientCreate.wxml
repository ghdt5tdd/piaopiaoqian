<!--pages/addCreate/addCreate.wxml-->
<form bindsubmit="formSubmit" report-submit="true">
  <view class='form-content'>
    <view class='section'>
      <view class="section-bar">
        <view class="section-title">客户名称：</view>
        <view class="section-info">
          <input name="company" placeholder='请输入客户名称' value="{{company}}"></input>
        </view>
      </view>
      <view class="section-bar">
        <view class="section-title">客户代码：</view>
        <view class="section-info">
          <input name="code" placeholder='请输入客户代码' value="{{code}}"></input>
        </view>
      </view>
      <view class="section-bar">
        <view class="section-title">客户卡号：</view>
        <view class="section-info">
          <input name="card" placeholder='请输入客户卡号' value="{{card}}"></input>
        </view>
      </view>
      <view class="section-bar">
        <view class="section-title">联系人：</view>
        <view class="section-info">
          <input name="name" placeholder='请输入联系人姓名' value="{{name}}"></input>
        </view>
      </view>
      <view class="section-bar">
        <view class="section-title">联系方式：</view>
        <view class="section-info">
          <input name="tel" placeholder='请输入联系人手机号' value="{{tel}}"></input>
        </view>
      </view>


    </view>
  </view>
  <button class='button-bottom' formType="submit">保存</button>

</form>