/* pages/enterInfo/enterInfo.wxss */

.enter-list-block {
  margin: 20rpx;
  border-radius: 10rpx;
  padding: 0 20rpx;
  overflow: hidden;
  background: #fff;
  box-shadow: 0rpx -10rpx 10rpx #eee,
                -10rpx 0rpx 10rpx #eee,
                10rpx 0rpx 10rpx #eee,
                0rpx 10rpx 10rpx #eee;
}

.enter-list-headline {
  display: flex;
  justify-content: space-between;
  font-size: 34rpx;
  line-height: 80rpx;
  border-bottom: 2rpx solid #e7e7e7;
}

.enter-list-time {
  font-size: 26rpx;
}

.enter-list-content {
  padding: 30rpx 0;
}

.enter-list-route {
  display: flex;
  font-size: 36rpx;
  align-items: center;
  margin-bottom: 20rpx;
  line-height: 60rpx;
}

.enter-list-route image {
  width: 100rpx;
  margin: 0 10rpx;
}

.enter-bar-item {
  display: flex;
  margin-top: 20rpx;
  font-size: 30rpx;
  line-height: 40rpx;
}

.enter-bar-label {
  width: 210rpx;
  color: #999;
}

.enter-bar-info {
  width: calc(100% - 210rpx);
}

.enter-bar-info input {
  background: #f5f5f5;
  padding: 10rpx 20rpx;
  height: 60rpx;
  border-radius: 10rpx;
}

.enter-list-pay .enter-bar-item {
  line-height: 60rpx;
  align-items: center;
  margin-top: 0
}

.enter-list-gallery {
  overflow: hidden;
  font-size: 0;
  margin-bottom: -20rpx;
}

.enter-gallery-img {
  float: left;
  position: relative;
  border: 1px dashed #e7e7e7;
  width: 140rpx;
  height: 140rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.enter-gallery-img image {
  width: 140rpx;
  height: 140rpx;
}
