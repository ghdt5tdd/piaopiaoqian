/* pages/dailyAdd/dailyAdd.wxss */

.abnormal-block {
  margin-top: 20rpx;
  background: #fff;
  padding: 0 20rpx;
}

.abnormal-bar {
  display: flex;
  font-size: 30rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #e7e7e7;
}

.abnormal-bar-label {
  width: 160rpx;
}

.abnormal-bar-info {
  width: calc(100% - 160rpx);
}

.abnormal-bar-info input {
  line-height: 80rpx;
  height: 80rpx;
}

.abnormal-text {
  margin-top: 20rpx;
  background: #fff;
  padding: 20rpx;
}

.abnormal-text textarea {
  width: calc(100% - 40rpx);
  border: 1px solid #e7e7e7;
  padding: 20rpx;
  line-height: 40rpx;
  height: 200rpx;
  font-size: 30rpx;
}
