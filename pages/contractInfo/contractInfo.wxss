/* pages/contractInfo/contractInfo.wxss */
@import '../contract/contract.wxss';

.order-bar-label {
  width: auto;
}

.order-bar-name {
  max-width: calc(100vw - 190rpx) !important;
  white-space: normal !important;
}

.order-bar-info.oneline{
  margin-right: 0;
}

.order-table {
  margin: 20rpx 0;
}

.table {
  display: table;
  width: 100%;
}

.goodsTable .tr {
  display: table-row;
  width: 100%;
  font-size: 30rpx;
  text-align: center;
}

.goodsTable .th, .goodsTable .td {
  display: table-cell;
  line-height: 80rpx;
  white-space: nowrap;
  padding: 0 10rpx;
  background: #fff;
  border-bottom: 1px solid #e7e7e7;
  border-right: 1px solid #e7e7e7;
}

.goodsTable .th:last-child, .goodsTable .td:last-child {
  border-right: none;
}
