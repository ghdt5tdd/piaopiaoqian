/* pages/enter/enter.wxss */

.search-scan {
  position: relative;
  padding: 20rpx 20rpx;
}

.search-scan input {
  line-height: 60rpx;
  height: 60rpx;
  font-size: 30rpx;
  background: #fff;
  padding: 10rpx 80rpx;
  border-radius: 10rpx;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  z-index: 2;
  top: 40rpx;
  left: 40rpx;
}

.scan-icon {
  width: 56rpx;
  height: 56rpx;
  position: absolute;
  z-index: 3;
  top: 32rpx;
  right: 40rpx;
}

.order-status {
  margin: 0;
}

.enter-list {
  overflow: hidden;
}

.enter-list-item {
  margin: 20rpx;
  border-radius: 10rpx;
  padding: 0 20rpx;
  overflow: hidden;
  background: #fff;
  box-shadow: 0rpx -10rpx 10rpx #eee,
                -10rpx 0rpx 10rpx #eee,
                10rpx 0rpx 10rpx #eee,
                0rpx 10rpx 10rpx #eee;
}

.enter-list-head {
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  line-height: 80rpx;
  border-bottom: 2rpx solid #e7e7e7;
}

.enter-list-time {
  font-size: 26rpx;
}

.enter-list-content {
  padding: 30rpx 0;
}

.enter-list-route {
  display: flex;
  font-size: 36rpx;
  align-items: center;
  margin-bottom: 20rpx;
  line-height: 60rpx;
}

.enter-list-route image {
  width: 100rpx;
  margin: 0 10rpx;
}

.enter-bar-item {
  display: flex;
  margin-top: 10rpx;
  font-size: 30rpx;
  line-height: 40rpx;
}

.enter-bar-label {
  width: 210rpx;
  color: #999;
}

.enter-bar-info {
  width: calc(100% - 210rpx);
}

.enter-list-other {
  border-top: 1px solid #e7e7e7;
  padding: 20rpx 0;
  text-align: right;
  position: relative;
}

.enter-list-status {
  font-size: 30rpx;
  text-align: left;
  line-height: 40rpx;
  width: 200rpx;
  color: #fd914c;
}

.enter-list-tip {
  font-size: 28rpx;
  text-align: left;
  color: #999;
  line-height: 30rpx;
  margin-top: 10rpx;
}

.enter-list-code {
  position: absolute;
  height: 70rpx;
  width: 70rpx;
  right: 0;
  top: 25rpx;
}


.pop-code {
  position: fixed;
  width: 520rpx;
  height: 600rpx;
  left: 50%;
  top: 50%;
  margin: -300rpx 0 0 -260rpx;
  font-size: 30rpx;
  text-align: center;
  z-index: 999;
  background: #fff;
}

.pop-code-head {
  color: #fd7c29;
  font-size: 36rpx;
  margin: 60rpx 0 30rpx;
}

.pop-code-pic {
  width: 320rpx;
  height: 320rpx;
  margin-top: 30rpx;
}

