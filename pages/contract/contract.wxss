/* pages/contract/contract.wxss */

.order-table-bar{
  margin-right: -20rpx
}

.order-bar-info {
  float: left;
  margin-right: 20rpx;
  display: flex;
}

.order-bar-label {
  color: #999;
}

.order-bar-name{
  max-width: calc(50vw - 180rpx); 
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.order-bar-info.oneline {
  width: calc(100% - 20rpx);
  max-width: none;
}

.order-bar-info.oneline .order-bar-name {
  max-width: none;
  width: calc(100% - 160rpx);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.order-bar-opt {
  position: absolute;
  color: #fd914c;
  right: 0;
  bottom: 20rpx;
}

.popup-filter {
  position: fixed;
  background: #fff;
  top: 0;
  bottom: 0;
  right: 0;
  width: 80%;
  z-index: 999;
}

.popup-head {
  background: #f6f5f4;
  line-height: 60rpx;
  font-size: 32rpx;
  padding: 10rpx 20rpx;
}

.popup-filter-content {
  height: calc(100% - 160rpx);
}

.popup-filter-bar {
  display: flex;
  padding: 10rpx 20rpx;
  line-height: 60rpx;
  border-bottom: 1px solid #e7e7e7;
  font-size: 32rpx;
}

.popup-filter-label {
  width: 150rpx;
}

.popup-filter-info {
  margin-left: 20rpx;
  width: calc(100% - 170rpx);
}

.popup-filter-info input {
  height: 60rpx;
  line-height: 60rpx;
}

.popup-foot {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #fd914c;
  color: #fff;
  font-size: 34rpx;
}

.popup-foot view {
  float: left;
  width: 50%;
}

.popup-foot .popup-foot-reset {
  background: #bbb;
}

.query {
  padding-right: 60rpx;
}

.query-search {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  top: 30rpx;
  right: 20rpx;
}

.query-add {
  position: absolute;
  bottom: 30rpx;
  right: 20rpx;
  font-size: 0.7rem;
  line-height: 42rpx;
}

.order-table-time {
  width: 226rpx;
  text-align: right;
}

.order-table-opt {
  border-top: 1px solid #e7e7e7;
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: right;
}

.order-opt-status {
  font-size: 32rpx;
  text-align: left;
  line-height: 40rpx;
}

.order-opt-item {
  display: inline-block;
  line-height: 60rpx;
  padding: 0 20rpx;
  min-width: 90rpx;
  font-size: 30rpx;
  text-align: center;
  border: 1px solid #cfcfcf;
  background: #cfcfcf;
  color: #fff;
  border-radius: 31rpx;
  margin-left: 20rpx;
}

.order-opt-item.active {
  border: 1px solid #ff5102;
  color: #ff5102;
  background: #fff;
}

.order-opt-item.on {
  border: 1px solid #ff5102;
  background: #ff5102;
  color: #fff;
}

.order-appoint-other {
  border-top: 1px solid #e7e7e7;
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-appoint-opt {
  width: 100%;
  text-align: right;
  position: relative;
}

.order-bar-opt {
  position: absolute;
  color: #fd914c;
  right: 0;
  bottom: 20rpx;
  font-size: 30rpx;
}

.order-opt-more {
  position: absolute;
  font-size: 30rpx;
  line-height: 60rpx;
  color: #999;
  top: 0;
  left: 0;
}

.order-opt-float {
  position: absolute;
  bottom: -80rpx;
  left: 0;
}

.order-opt-float .order-opt-item {
  box-shadow: 0rpx -10rpx 10rpx #eee,
                -10rpx 0rpx 10rpx #eee,
                10rpx 0rpx 10rpx #eee,
                0rpx 10rpx 10rpx #eee;
}
