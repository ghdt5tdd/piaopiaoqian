/* pages/workList/workList.wxss */
@import '../appoint/appoint.wxss';

.order-table-row {
  padding: 20rpx 0;
  border-top: 1px solid #e7e7e7;
}

.order-row-bar {
  display: flex;
  width: 100%;
  font-size: 30rpx;
  line-height: 50rpx;
}

.order-bar-name {
  width: calc(100% - 180rpx);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap
}

.order-table-opt{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-opt-status{
  line-height: 60rpx
}
