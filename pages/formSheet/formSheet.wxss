/* pages/formSheet/formSheet.wxss */

.head-type {
  padding: 20rpx 0;
  text-align: center;
}

.head-type-item {
  line-height: 56rpx;
  border: 2rpx solid #fd914c;
  color: #fd914c;
  border-radius: 10rpx 0 0 10rpx;
  font-size: 28rpx;
  width: 200rpx;
  display: inline-block;
  text-align: center;
  background: #fff;
}

.head-type-item:last-child {
  border-radius: 0 10rpx 10rpx 0;
}

.head-type-item.on {
  line-height: 56rpx;
  background: #fd914c;
  color: #fff;
}

.order-table-bar {
  margin-right: -20rpx;
}

.order-bar-info {
  float: left;
  margin-right: 20rpx;
  display: flex;
  width: calc(50% - 20rpx);
  line-height: 50rpx;
}

.order-bar-info:nth-child(even) {
  justify-content: flex-end;
}

.order-bar-label {
  color: #999;
}

.order-bar-label, .order-bar-name {
  font-size: 30rpx;
}

.order-bar-info.full {
  width: 100%;
}

.order-bar-info.full .order-bar-label {
  width: 90rpx;
}

.order-bar-info.full .order-bar-name {
  width: calc(100% - 90rpx);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.order-table-opt {
  border-top: 1px solid #e7e7e7;
  padding: 20rpx 0;
  position: relative;
  text-align: right;
}

.order-opt-status {
  font-size: 28rpx;
  position: absolute;
  line-height: 40rpx;
  top: 33rpx;
  color: #999;
}

.order-opt-item {
  display: inline-block;
  line-height: 60rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
  text-align: center;
  border: 1px solid #cfcfcf;
  background: #cfcfcf;
  color: #fff;
  border-radius: 31rpx;
  margin-left: 20rpx;
}

.order-opt-item.active {
  border: 1px solid #fd914c;
  background: #fff;
  color: #fd914c;
}

.order-opt-item.on {
  border: 1px solid #fd914c;
  background: #fd914c;
  color: #fff;
}

/*弹窗*/

.pop-tip {
  background: #fff;
  width: 80%;
  height: 400rpx;
  left: 10%;
  top: 50%;
  margin-top: -200rpx;
  border-radius: 10rpx;
}

.pop-tip-content {
  height: calc(100% - 260rpx);
  font-size: 30rpx;
  color: #999;
  padding: 20rpx 30rpx;
  line-height: 42rpx;
}

.pop-head-left {
  font-size: 34rpx;
  padding: 30rpx;
  line-height: 60rpx;
  color: #fd8436;
}

.pop-opt {
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-bottom: 40rpx;
  line-height: 60rpx;
}

.pop-opt view {
  margin: 0 20rpx;
  width: calc(50% - 40rpx);
  border: 1px solid #fd8436;
  color: #fd8436;
  border-radius: 30rpx;
  text-align: center;
}

/*明细*/

.query-condition-items picker {
  font-size: 36rpx;
  line-height: 78rpx;
  height: 78rpx;
}

.query-condition-items.active picker {
  font-size: 32rpx;
  line-height: 42rpx;
  height: 42rpx;
  margin-top: 6rpx;
  min-height: 0;
}

.query-date-items, .query-date-items.active {
  width: calc(50% - 22rpx);
  border-right: 1px solid #e7e7e7;
  padding-right: 20rpx;
}

.query-date-items:nth-child(even) {
  border: none;
  padding-left: 20rpx;
  padding-right: 0;
}

.query-date-items:nth-child(even) .search-clear {
  right: 60rpx;
}

.order-status {
  margin-top: 2rpx;
}

/* 表格样式 */

.table {
  display: table;
  width: 100%;
}

.goodsTable .tr {
  display: table-row;
  width: 100%;
  font-size: 30rpx;
  text-align: center;
}

.goodsTable .th, .goodsTable .td {
  display: table-cell;
  line-height: 40rpx;
  white-space: nowrap;
  padding: 20rpx;
  background: #fff;
  border-right: 1px solid #e7e7e7;
}

.goodsTable .th {
  background: #f3f3f3;
}

.goodsTable .td {
  border-right: 1px solid #e7e7e7;
  border-bottom: 1px solid #e7e7e7;
  line-height: 80rpx;
  padding: 0 20rpx;
  vertical-align: middle;
}

.goodsTable .th:last-child, .goodsTable .td:last-child {
  border-right: none;
}

/*客户弹窗*/

.pop-forwarder {
  bottom: 0;
  width: 100%;
  background: #fff;
}

.pop-forwarder .forwarder-content {
  max-height: 70vh;
}

.forwarder-list {
  padding: 20rpx 0;
  overflow: hidden;
}

.forwarder-item {
  background: #fff;
  border-radius: 10rpx;
  font-size: 30rpx;
  line-height: 48rpx;
  padding: 20rpx;
  position: relative;
}

.forwarder-item-check {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  z-index: 99;
}

.forwarder-item-check image {
  width: 40rpx;
  height: 40rpx;
}

.forwarder-item-head {
  position: relative;
  padding: 10rpx 40rpx 20rpx 140rpx;
  font-size: 34rpx;
}

.forwarder-item-logo {
  position: absolute;
  top: 0;
  left: 0;
  width: 120rpx;
  height: 120rpx;
  border: 1px solid #e7e7e7;
}

.forwarder-item-spec {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 40rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.forwarder-item-bar {
  display: flex;
  align-items: flex-start;
  font-size: 28rpx;
  margin-top: 10rpx;
  line-height: 40rpx;
}

.forwarder-item-bar image {
  width: 36rpx;
  height: 36rpx;
  margin: 2rpx 20rpx 0 0;
}

/**等级图片**/

.forwarder-item-level {
  width: 170rpx;
  height: 32rpx;
  overflow: hidden;
  font-size: 0;
  margin-top: 20rpx;
}

.forwarder-item-level.level-4 {
  width: 136rpx;
}

.forwarder-item-level.level-3 {
  width: 102rpx;
}

.forwarder-item-level.level-2 {
  width: 68rpx;
}

.forwarder-item-level.level-1 {
  width: 34rpx;
}

.forwarder-item-level image {
  display: block;
  float: left;
  width: 32rpx;
  height: 32rpx;
  margin: 0 1rpx;
}
